<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="spring.project.shop.mapperinterface.MemberMapper">
    <resultMap id="memberVOResultMap" type="spring.project.shop.domain.Member">
        <id property="memberId" column="member_id"/>
        <result property="password" column="password"/>
        <result property="gender" column="gender"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="email" column="email"/>
        <result property="Grade" column="grade"/>
    </resultMap>
    <select id="find" parameterType="spring.project.shop.domain.Member" resultMap="memberVOResultMap">
        SELECT * FROM member WHERE member_id = #{memberId}
    </select>

    <select id="findAll" resultType="map">
        SELECT * FROM member
    </select>
    <insert id="save">
        INSERT INTO member(member_id,password, gender, phone_number, email, grade)
        VALUES(#{memberId}, #{password}, #{gender}, #{phoneNumber}, #{email} ,#{Grade})
    </insert>
</mapper>